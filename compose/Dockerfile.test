FROM python:3.11-slim

# Instalar dependências do sistema
RUN apt-get update && apt-get install -y \
    gcc \
    g++ \
    && rm -rf /var/lib/apt/lists/*

# Definir diretório de trabalho
WORKDIR /app

# Copiar requirements
COPY requirements.txt .

# Instalar dependências Python
RUN pip install --no-cache-dir -r requirements.txt

# Instalar dependências específicas para testes
RUN pip install --no-cache-dir \
    pytest \
    pytest-asyncio \
    pytest-cov \
    pytest-html \
    pytest-xdist \
    httpx \
    pytest-mock \
    pytest-env \
    pytest-docker \
    pytest-redis \
    pytest-postgresql \
    factory-boy \
    faker

# Copiar código da aplicação
COPY api/ /app/
COPY app/ /app/app/

# Criar diretório para resultados de testes
RUN mkdir -p /app/test-results

# Definir variáveis de ambiente para testes
ENV PYTHONPATH=/app
ENV TESTING=true
ENV PYTHONUNBUFFERED=1

# Comando padrão para executar testes
CMD ["python", "-m", "pytest", "/app/tests", "-v", "--tb=short"]
